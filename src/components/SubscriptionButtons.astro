---
import { Claude, OpenAI, Gemini } from "@lobehub/icons";
---

<div class="container">
    <a href="https://claude.ai/settings/billing" target="_blank" rel="noopener noreferrer" class="card claude">
        <div class="icon-wrapper">
            <Claude.Combine size={80} />
        </div>
        <span class="label">Claude</span>
    </a>

    <a href="https://chatgpt.com/#settings/Account" target="_blank" rel="noopener noreferrer" class="card chatgpt">
        <div class="icon-wrapper">
            <OpenAI.Combine size={80} />
        </div>
        <span class="label">ChatGPT</span>
    </a>

    <a href="https://one.google.com/settings" target="_blank" rel="noopener noreferrer" class="card gemini">
        <div class="icon-wrapper">
            <Gemini.Combine size={80} />
        </div>
        <span class="label">Gemini</span>
    </a>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        padding: 2rem;
    }

    @media (min-width: 768px) {
        .container {
            flex-direction: row;
            gap: 3rem;
        }
    }

    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 250px;
        height: 250px;
        border-radius: 24px;
        text-decoration: none;
        color: white;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3); /* Darker shadow for dark theme */
        background-color: #2a2a2a; /* Fallback/Base color */
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1); /* Subtle border */
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    }

    .icon-wrapper {
        width: 100px;
        height: 100px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .label {
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    /* 
       Since we are using "Combine" icons which are likely colorful, 
       we might want to tone down the card backgrounds or make them more subtle 
       to let the icons pop. Or we can keep the gradients if they match.
       Let's keep the gradients but maybe slightly darker or just as is.
       The user asked for "Dark Theme", so maybe the cards should be dark 
       and the icons provide the color? 
       
       However, the previous design had specific gradients for each service.
       Let's try to keep the identity but maybe use a dark glassmorphism effect 
       or keep the gradients. 
       
       Let's stick to the gradients for now as they provide good click targets.
    */

    /* Claude - Warm/Neutral */
    .claude {
        background: linear-gradient(135deg, #d97757 0%, #c96646 100%);
    }
    .claude:hover {
        background: linear-gradient(135deg, #e98767 0%, #d97656 100%);
    }

    /* ChatGPT - Teal/Green */
    .chatgpt {
        background: linear-gradient(135deg, #74aa9c 0%, #10a37f 100%);
    }
    .chatgpt:hover {
        background: linear-gradient(135deg, #84baac 0%, #20b38f 100%);
    }

    /* Gemini - Blue/Purple Gradient */
    .gemini {
        background: linear-gradient(135deg, #4e87f5 0%, #8e5af7 100%);
    }
    .gemini:hover {
        background: linear-gradient(135deg, #5e97ff 0%, #9e6aff 100%);
    }
</style>
